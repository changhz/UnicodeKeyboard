<Window x:Class="VirtualKeyboardOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Virtual Keyboard" Height="200" Width="400"
        Topmost="True" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Grid Background="#AA000000" Margin="10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="∈" Width="20" Height="20" Click="KeyButton_Click"/>
            <Button Content="∉" Width="20" Height="20" Click="KeyButton_Click"/>
            <Button Content="∪" Width="20" Height="20" Click="KeyButton_Click"/>
            <Button Content="∩" Width="20" Height="20" Click="KeyButton_Click"/>
        </StackPanel>
    </Grid>
</Window>