<Window x:Class="UnicodeKeyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Unicode Keyboard" Height="200" Width="400"
        Topmost="True"
        WindowStyle="None"
        ShowActivated="False"
        AllowsTransparency="True"
        Background="Transparent">
    <Grid Background="#AA000000" Margin="10">
        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="∈" Width="40" Height="40" FontSize="25" Click="KeyButton_Click"/>
            <Button Content="∉" Width="40" Height="40" FontSize="25" Click="KeyButton_Click"/>
            <Button Content="∪" Width="40" Height="40" FontSize="25" Click="KeyButton_Click"/>
            <Button Content="∩" Width="40" Height="40" FontSize="25" Click="KeyButton_Click"/>
            <Button Content="⊆" Width="40" Height="40" FontSize="25" Click="KeyButton_Click"/>
            <Button Content="⊇" Width="40" Height="40" FontSize="25" Click="KeyButton_Click"/>
            <Button Content="⊂" Width="40" Height="40" FontSize="25" Click="KeyButton_Click"/>
            <Button Content="⊃" Width="40" Height="40" FontSize="25" Click="KeyButton_Click"/>
            <Button Content="∅" Width="40" Height="40" FontSize="25" Click="KeyButton_Click"/>
            <Button Content="℘" Width="40" Height="40" FontSize="25" Click="KeyButton_Click"/>
            <Button Content="⊖" Width="40" Height="40" FontSize="25" Click="KeyButton_Click"/>
            <Button Content="⊕" Width="40" Height="40" FontSize="25" Click="KeyButton_Click"/>
            <Button Content="⊗" Width="40" Height="40" FontSize="25" Click="KeyButton_Click"/>
            <Button Content="⊥" Width="40" Height="40" FontSize="25" Click="KeyButton_Click"/>
            <Button Content="∃" Width="40" Height="40" FontSize="25" Click="KeyButton_Click"/>
            <Button Content="∀" Width="40" Height="40" FontSize="25" Click="KeyButton_Click"/>
        </WrapPanel>
    </Grid>
</Window>