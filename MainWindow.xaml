<Window x:Class="UnicodeKeyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Unicode Keyboard" Height="600" Width="400"
        Topmost="True"
        WindowStyle="None"
        ShowActivated="False"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#222222"/>
            <Setter Property="Foreground" Value="#eeeeee"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Background="#AA000000" Margin="10" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- original set-theory buttons -->
            <TextBlock Text="Set" Foreground="#eeeeee" FontSize="14" Margin="0,10,0,5" HorizontalAlignment="Center"/>
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="∈" Click="KeyButton_Click"/>
                <Button Content="∉" Click="KeyButton_Click"/>
                <Button Content="∪" Click="KeyButton_Click"/>
                <Button Content="∩" Click="KeyButton_Click"/>
                <Button Content="⊆" Click="KeyButton_Click"/>
                <Button Content="⊇" Click="KeyButton_Click"/>
                <Button Content="⊂" Click="KeyButton_Click"/>
                <Button Content="⊃" Click="KeyButton_Click"/>
                <Button Content="∅" Click="KeyButton_Click"/>
                <Button Content="℘" Click="KeyButton_Click"/>
                <Button Content="⊖" Click="KeyButton_Click"/>
                <Button Content="⊕" Click="KeyButton_Click"/>
                <Button Content="⊗" Click="KeyButton_Click"/>
                <Button Content="⊥" Click="KeyButton_Click"/>
                <Button Content="∃" Click="KeyButton_Click"/>
                <Button Content="∀" Click="KeyButton_Click"/>
            </WrapPanel>

            <!-- Arithmetics section -->
            <TextBlock Text="Arithmetics" Foreground="#eeeeee" FontSize="14" Margin="0,10,0,5" HorizontalAlignment="Center"/>
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- operators -->
                <Button Content="∑" Click="KeyButton_Click"/>
                <Button Content="∏" Click="KeyButton_Click"/>
                <Button Content="∫" Click="KeyButton_Click"/>
                <Button Content="√" Click="KeyButton_Click"/>
                <Button Content="∝" Click="KeyButton_Click"/>
                <Button Content="∞" Click="KeyButton_Click"/>
                <Button Content="∂" Click="KeyButton_Click"/>
                <Button Content="∇" Click="KeyButton_Click"/>
                <Button Content="±" Click="KeyButton_Click"/>
                <Button Content="×" Click="KeyButton_Click"/>
                <Button Content="≠" Click="KeyButton_Click"/>
                <Button Content="≈" Click="KeyButton_Click"/>
                <Button Content="≤" Click="KeyButton_Click"/>
                <Button Content="≥" Click="KeyButton_Click"/>

                <!-- superscripts 0-9 -->
                <Button Content="⁰" Click="KeyButton_Click"/>
                <Button Content="¹" Click="KeyButton_Click"/>
                <Button Content="²" Click="KeyButton_Click"/>
                <Button Content="³" Click="KeyButton_Click"/>
                <Button Content="⁴" Click="KeyButton_Click"/>
                <Button Content="⁵" Click="KeyButton_Click"/>
                <Button Content="⁶" Click="KeyButton_Click"/>
                <Button Content="⁷" Click="KeyButton_Click"/>
                <Button Content="⁸" Click="KeyButton_Click"/>
                <Button Content="⁹" Click="KeyButton_Click"/>

                <!-- superscript operators/parentheses (added) -->
                <Button Content="⁺" Click="KeyButton_Click"/>
                <Button Content="⁻" Click="KeyButton_Click"/>
                <Button Content="⁼" Click="KeyButton_Click"/>
                <Button Content="⁽" Click="KeyButton_Click"/>
                <Button Content="⁾" Click="KeyButton_Click"/>

                <!-- subscripts 0-9 -->
                <Button Content="₀" Click="KeyButton_Click"/>
                <Button Content="₁" Click="KeyButton_Click"/>
                <Button Content="₂" Click="KeyButton_Click"/>
                <Button Content="₃" Click="KeyButton_Click"/>
                <Button Content="₄" Click="KeyButton_Click"/>
                <Button Content="₅" Click="KeyButton_Click"/>
                <Button Content="₆" Click="KeyButton_Click"/>
                <Button Content="₇" Click="KeyButton_Click"/>
                <Button Content="₈" Click="KeyButton_Click"/>
                <Button Content="₉" Click="KeyButton_Click"/>
            </WrapPanel>

            <TextBlock Text="Numerics" Foreground="#eeeeee" FontSize="14" Margin="0,10,0,5" HorizontalAlignment="Center"/>
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="ℂ" Click="KeyButton_Click"/>
                <Button Content="ℍ" Click="KeyButton_Click"/>
                <Button Content="ℕ" Click="KeyButton_Click"/>
                <Button Content="ℙ" Click="KeyButton_Click"/>
                <Button Content="ℚ" Click="KeyButton_Click"/>
                <Button Content="ℝ" Click="KeyButton_Click"/>
                <Button Content="ℤ" Click="KeyButton_Click"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>